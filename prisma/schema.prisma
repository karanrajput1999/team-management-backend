generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  username String
  email    String @unique
  password String
  token    Int      @default(0)
  roleId Int
  adminId Int?
  isActive Int      @default(0)
  userIp   String
  status Int @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Menu{
  id Int @id @default(autoincrement())
  menuLableId String
  label String
  icon String
  link String
  status Int
  sequence Int
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
 
}

model SubMenu {
  id Int @id @default(autoincrement())
  submenuLableId String
  label String
  parentId String
  link String
  status Int
  menuId Int
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  
}

model SubMenuAssign{
  id Int @id @default(autoincrement())
  menuId Int
  status Int
  subMenuId Int
  roleId Int
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Role {
  id Int @id @default(autoincrement())
  name String
  status Int
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model RoleAssign{
  id Int @id @default(autoincrement())
  roleId Int
  userId Int
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Center {
  id Int @id @default(autoincrement())
  centerName String
  ownerName String
  mobileNumber String
  location String
  userType String
  emailId String
  password String
  branchId String
  status Int?
  addedBy Int? 
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())  
}

model BankCode{
  id Int @id @default(autoincrement())
  centerName String
  bankName String
  userNameCode String
  password String
  userStatus String?
  addedBy Int? 
  status Int @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())  
}

model CenterUser{
  id Int @id @default(autoincrement())
  name String
  email String
  password String
  mobileNumber String
  centerId Int
  centerName String
  age Int
  aadharNumber String
  panNo String
  location String
  branchId String
  userType Int
  status Int @default(1)
  addedBy Int? 
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())  
}

model Form{
  id Int @id @default(autoincrement())
  fullName String
  mobileNo String
  email String
  dob String
  panNo String
  fatherName String
  motherName String
  disposition String // this needs to be changed later
  currentAddress String
  pinCode Int
  companyName String
  companyAddress String
  income Int
  bankName String
  clientType String
  addedBy Int
  status Int @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())  
}

model FormStatus{
  id Int @id @default(autoincrement())
  formId Int
  formStatus String
  applicationNo String
  addedBy Int
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())  

}
